#!/bin/bash

. $HOME/.wmrc

xrdb -merge $HOME/.Xresources &

# Driver
xrandr --auto

# Wallpaper
feh --bg-fill $WALL/sea.jpg

# Fonts
xset fp+ $HOME/.fonts &
xset fp rehash &

# Keyboard layout
setxkbmap -layout us &

# Panel
. $BAR/simple

# X keybinding
sxhkd -c $SXHKD/sxhkdrc &

# Multi session
session=windowchef
case "$1" in
			2bwm			) exec 2bwm ;;
			gnome-session 	) exec gnome-session ;;
			openbox			) exec openbox-session ;;
			pekwm			) exec pekwm ;;
			windowchef		) exec windowchef -c $WCHEF/windowchefrc;;
	    	xfce4			) exec startxfce4 ;;
			*) exec $session ;;
esac